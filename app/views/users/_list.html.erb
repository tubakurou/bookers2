    <div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
  <h2>User info</h2>
    <%= attachment_image_tag user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "no_image.jpg" %>
  <table class="table">

    <tbody>
      <tr></tr>
      <tr>
        <th>name</th>
        <th><%= user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= user.introduction %></th>
      </tr>
  </tbody>
   </table>
   <div class="row">

      <%= link_to edit_user_path(user.id), class:"btn btn-outline-secondary btn-block", method: :get do %>
  <i class="fas fa-user-cog"></i>
      <% end %>
      <h2 class="mt-3">New book</h2>

    <%= form_with model:book, url:'/books', local:true do |f| %>
    <div class="form-group">
    <%= f.label :title %>
  <%= f.text_field :title %>
  </div>

  <div class="form-group">
  <%= f.label :body %>
  <%= f.text_area :body %>
</div>
<div class="form-group">
  <%= f.submit 'Create Book', class:"btn btn-success" %>
<% end %>

</div>
</div>
</div>