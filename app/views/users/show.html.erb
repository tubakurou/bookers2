<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
  <h2>User info</h2>
    <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
  <table class="table">

    <tbody>
      <tr></tr>
      <tr>
        <th>name</th>
        <th><%= @user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= @user.introduction %></th>
      </tr>
  </tbody>
   </table>
   <div class="row">
<% if @user.id == current_user.id %>
      <%= link_to edit_user_path(current_user), class:"btn btn-outline-secondary btn-block", method: :get do %>
  <i class="fas fa-user-cog"></i>
      <% end %>
      <% end %>
      </div>
      <h2 class="mt-3">New book</h2>

    <%= form_with model: @book, url:'/books', local:true do |f| %>
    <h4>タイトル</h4>
  <%= f.text_field :title %>
  <h4>本文</h4>
  <%= f.text_area :body %>
  <%= f.submit '投稿' %>
<% end %>

      </div>

      <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
     <table class="table table-hover table-inverse">
        <thead>
        <tr>
        <th>Title</th>
        <th>Opinion</th>
        <th></th>
        <th colspan="3"></th>
        </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
        <tr>
        <td><%= attachment_image_tag @user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image_user.jpg" %></td>

        <td><%= link_to "title", book_path(current_user.id) %> </td>

        <td><%= book.body %></td>

        <% end %>
        </tbody>
      </table>
       </div>
      </div>
    </div>





